}

.no-fields-message ul {
  text-align: left;
  color: #78350f;
  margin: 0 0 20px 0;
}

.curl-example {
  background: #f3f4f6;
  border: 1px solid #d1d5db;
  border-radius: 8px;
  padding: 16px;
  margin-top: 16px;
}

.curl-example h5 {
  color: #059669;
  margin: 0 0 12px 0;
  font-size: 16px;
}

.curl-example pre {
  background: #1f2937;
  color: #f9fafb;
  padding: 12px;
  border-radius: 6px;
  font-size: 13px;
  line-height: 1.4;
  margin: 0;
  overflow-x: auto;
}

/* Template Actions */
.template-actions {
  background: #f8fafc;
  border: 2px solid #e2e8f0;
  border-radius: 16px;
  padding: 24px;
  margin: 24px 0;
}

.action-group {
  margin-bottom: 24px;
}

.action-group:last-child {
  margin-bottom: 0;
}

.action-group h4 {
  color: #1e293b;
  font-size: 18px;
  font-weight: 600;
  margin: 0 0 12px 0;
  display: flex;
  align-items: center;
  gap: 8px;
}

.save-buttons, .import-buttons {
  display: flex;
  gap: 12px;
  margin-bottom: 8px;
  flex-wrap: wrap;
}

.help-text {
  font-size: 13px;
  color: #6b7280;
  font-style: italic;
  line-height: 1.4;
}

/* Large Input Focus States */
.curl-input:focus, .json-input:focus {
  transform: scale(1.01);
  transition: all 0.3s ease;
}

/* Better Button Spacing */
.btn {
  white-space: nowrap;
  min-height: 44px;
}

/* Improved Error States */
.jolt-error-section {
  background: #fef2f2;
  border: 2px solid #ef4444;
  border-radius: 12px;
  padding: 16px;
  margin: 16px 0;
}

.jolt-error-section h5 {
  color: #dc2626;
  margin: 0 0 12px 0;
  font-size: 16px;
  font-weight: 600;
}

.jolt-error {
  color: #dc2626;
  font-family: 'Consolas', monospace;
  font-size: 14px;
  line-height: 1.4;
  background: #ffffff;
  padding: 12px;
  border-radius: 6px;
  border: 1px solid #fca5a5;
}

.jolt-preview-section {
  background: #ecfdf5;
  border: 2px solid #10b981;
  border-radius: 12px;
  padding: 16px;
  margin: 16px 0;
}

.jolt-preview-section h5 {
  color: #059669;
  margin: 0 0 12px 0;
  font-size: 16px;
  font-weight: 600;
}

.field-suggestions {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  margin-bottom: 16px;
  padding: 12px;
  background: #f9fafb;
  border-radius: 6px;
}

.field-suggestions span {
  font-weight: 500;
  color: #374151;
  margin-right: 8px;
}

.suggestion-btn {
  background: #dbeafe;
  color: #1e40af;
  border: none;
  padding: 4px 8px;
  border-radius: 4px;
  font-size: 12px;
  cursor: pointer;
  transition: all 0.2s;
}

.suggestion-btn:hover {
  background: #bfdbfe;
}

.suggestion-btn.error {
  background: #fee2e2;
  color: #dc2626;
}

.suggestion-btn.error:hover {
  background: #fecaca;
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 12px;
}

.import-btn {
  font-size: 14px;
  padding: 8px 16px;
}

.template-actions {
  display: flex;
  flex-direction: column;
  gap: 24px;
  margin: 24px 0;
  padding: 20px;
  background: #f8fafc;
  border-radius: 8px;
  border: 1px solid #e2e8f0;
}

.action-group h4 {
  margin: 0 0 12px 0;
  color: #1e293b;
  font-size: 16px;
  font-weight: 600;
}

.save-buttons,
.import-buttons {
  display: flex;
  gap: 12px;
  flex-wrap: wrap;
}

.save-buttons .btn,
.import-buttons .btn {
  flex: 1;
  min-width: 180px;
}

.help-text {
  color: #64748b;
  font-size: 13px;
  margin-top: 8px;
  line-height: 1.4;
}

/* Auto-detect button styling */
.btn.secondary {
  background: #f1f5f9;
  color: #475569;
  border: 1px solid #cbd5e1;
}

.btn.secondary:hover {
  background: #e2e8f0;
  color: #334155;
}

/* Enhanced field category styling */
.field-category {
  margin-bottom: 24px;
  border: 1px solid #e5e7eb;
  border-radius: 8px;
  overflow: hidden;
  background: white;
}

.category-title {
  background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
  padding: 12px 16px;
  margin: 0;
  font-size: 16px;
  font-weight: 600;
  color: #374151;
  border-bottom: 1px solid #d1d5db;
  display: flex;
  align-items: center;
  gap: 8px;
}

/* Enhanced field row styling */
.field-row {
  display: flex;
  align-items: flex-start;
  padding: 16px;
  margin-bottom: 0;
  border-bottom: 1px solid #f3f4f6;
  background: #fafbfc;
  transition: background-color 0.2s;
}

.field-row:hover {
  background: #f0f9ff;
}

.field-row:last-child {
  border-bottom: none;
}

.field-info {
  flex: 1;
  margin-right: 16px;
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.field-info strong {
  color: #1f2937;
  font-weight: 600;
  font-size: 14px;
}

.field-value {
  background: #f3f4f6;
  color: #6b7280;
  padding: 2px 6px;
  border-radius: 4px;
  font-size: 12px;
  font-family: 'Courier New', monospace;
  display: inline-block;
  max-width: 200px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.field-controls {
  display: flex;
  flex-direction: column;
  gap: 12px;
  min-width: 300px;
}

.radio-group {
  display: flex;
  gap: 16px;
  margin-bottom: 8px;
}

.radio-label {
  display: flex;
  align-items: center;
  gap: 6px;
  cursor: pointer;
  padding: 6px 12px;
  border-radius: 6px;
  transition: background-color 0.2s;
  font-size: 14px;
  font-weight: 500;
}

.radio-label:hover {
  background: #f3f4f6;
}

.radio-label input[type="radio"] {
  margin: 0;
}

.dynamic-config,
.static-config {
  display: flex;
  flex-direction: column;
  gap: 8px;
  padding: 12px;
  background: white;
  border-radius: 6px;
  border: 1px solid #d1d5db;
}

.dynamic-config label,
.static-config label {
  font-size: 12px;
  font-weight: 500;
  color: #6b7280;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.store-attribute-select,
.store-attribute-input,
.static-value-input {
  padding: 8px 12px;
  border: 1px solid #d1d5db;
  border-radius: 6px;
  font-size: 14px;
  transition: border-color 0.2s, box-shadow 0.2s;
}

.store-attribute-select:focus,
.store-attribute-input:focus,
.static-value-input:focus {
  outline: none;
  border-color: #3b82f6;
  box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

/* Enhanced responsiveness */
@media (max-width: 768px) {
  .field-row {
    flex-direction: column;
    align-items: stretch;
    gap: 12px;
  }
  
  .field-controls {
    min-width: auto;
  }
  
  .radio-group {
    justify-content: center;
  }
  
  .save-buttons,
  .import-buttons {
    flex-direction: column;
  }
  
  .save-buttons .btn,
  .import-buttons .btn {
    min-width: auto;
  }
  
  .example-item {
    flex-direction: column;
    gap: 8px;
  }
  
  .example-label {
    min-width: auto;
  }
}

/* Loading states and animations */
@keyframes pulse {
  0% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
  100% {
    opacity: 1;
  }
}

.btn.loading {
  animation: pulse 1.5s ease-in-out infinite;
  pointer-events: none;
}

/* Success and error message styling */
.message-success {
  background: #f0fdf4;
  border: 1px solid #22c55e;
  color: #15803d;
  padding: 12px 16px;
  border-radius: 6px;
  margin: 12px 0;
  display: flex;
  align-items: center;
  gap: 8px;
}

.message-error {
  background: #fef2f2;
  border: 1px solid #ef4444;
  color: #dc2626;
  padding: 12px 16px;
  border-radius: 6px;
  margin: 12px 0;
  display: flex;
  align-items: center;
  gap: 8px;
}

.message-info {
  background: #eff6ff;
  border: 1px solid #3b82f6;
  color: #1d4ed8;
  padding: 12px 16px;
  border-radius: 6px;
  margin: 12px 0;
  display: flex;
  align-items: center;
  gap: 8px;
}
