  background: white;
  border-radius: 6px;
  border: 1px solid #bfdbfe;
}

.example-label {
  font-weight: 600;
  color: #1e40af;
  min-width: 180px;
  flex-shrink: 0;
}

.example-desc {
  color: #374151;
  line-height: 1.4;
}

/* Additional UI Enhancements */
