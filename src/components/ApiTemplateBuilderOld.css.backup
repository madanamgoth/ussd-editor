  .json-transformation {
    grid-template-columns: 1fr;
    gap: 16px;
  }
  
  .arrow-transform {
    padding: 10px 0;
  }
  
  .arrow-transform span {
    transform: rotate(90deg);
  }
  
  .field-row {
